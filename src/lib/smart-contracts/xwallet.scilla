transition UpdateInit(
  addr: ByStr20 with contract field services_: Map String ByStr20, field dns: Map String (Map String ByStr20), field psc_fee: Map String Uint128 end,
  tyron: Option Uint128
  )
  IsOperational; VerifyAdmin tyron; init_ := addr end

transition BuyNFTUsername(
  username: String,
  tyron: Option Uint128
  )
  IsOperational; VerifyAdmin tyron; init <- init_;
  get_fee <-& init.psc_fee[domain_]; fee = option_uint128_value get_fee;
  accept; msg = let m = { _tag: "BuyDomainNameNFT"; _recipient: init; _amount: fee;
    username: username;
    domain: domain_ } in one_msg m; send msg end

