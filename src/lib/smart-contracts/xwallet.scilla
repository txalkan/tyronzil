    amount: amount } in one_msg m ; send msg end

transition AddLiquidity(
  tokenAddr: ByStr20,
  zilswapAddr: ByStr20,
  amount: Uint128,
  tyron: Option Uint128
  )
  IsOperational; VerifyAdmin tyron;
  IncreaseAllowance tokenAddr zilswapAddr amount;
  current_block <- &BLOCKNUMBER; get_deadline <- deadline; this_deadline = builtin badd current_block get_deadline;
  accept; msg = let m = { _tag: "AddLiquidity"; _recipient: zilswapAddr; _amount: _amount;
    token_address: tokenAddr;
    min_contribution_amount: amount;
    max_token_amount: amount;
    deadline_block: this_deadline } in one_msg m ; send msg end

