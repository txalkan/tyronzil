procedure IncreaseAllowance(
  tokenAddr: ByStr20,
  zilswapAddr: ByStr20,
  amount: Uint128
  )
  msg = let m = { _tag: "IncreaseAllowance"; _recipient: tokenAddr; _amount: zero;
